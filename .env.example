# Heart Protocol Environment Configuration
# Copy this file to .env and fill in your values

# === CORE CONFIGURATION ===
SECRET_KEY=your-super-secret-key-here-change-this
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://heart_user:your-db-password@localhost:5432/heart_protocol
DB_PASSWORD=your-secure-database-password

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379/0

# === BLUESKY INTEGRATION ===
BLUESKY_HANDLE=monarch.bsky.social
BLUESKY_APP_PASSWORD=your-bluesky-app-password
BLUESKY_FIREHOSE_URL=wss://bsky.network/xrpc/com.atproto.sync.subscribeRepos

# === MONARCH BOT CONFIGURATION ===
MONARCH_BLUESKY_HANDLE=monarch.bsky.social
OPENAI_API_KEY=your-openai-api-key-optional

# === MONITORING ===
PROMETHEUS_GATEWAY=http://localhost:9090
GRAFANA_PASSWORD=your-grafana-admin-password

# === SECURITY ===
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT_PER_MINUTE=60
MAX_CONNECTIONS_PER_IP=10

# === PRIVACY SETTINGS ===
DATA_RETENTION_DAYS=90
ANONYMIZATION_ENABLED=true
CONSENT_REQUIRED=true
PRIVACY_MODE=strict

# === CULTURAL SENSITIVITY ===
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
CULTURAL_ADAPTATION_ENABLED=true

# === HEALING METRICS ===
WELLBEING_THRESHOLD=75.0
CARE_EFFECTIVENESS_THRESHOLD=80.0
CRISIS_INTERVENTION_TIMEOUT=300

# === COMMUNITY GOVERNANCE ===
COMMUNITY_MODERATION_ENABLED=true
DEMOCRATIC_DECISION_MAKING=true
CONSENSUS_THRESHOLD=0.75

# === ETHICAL FUNDING ===
GITHUB_SPONSORS_ENABLED=true
KOFI_WEBHOOK_SECRET=your-kofi-webhook-secret
TRANSPARENCY_REPORTING=true
ETHICAL_FUNDING_ONLY=true

# === ENTERPRISE FEATURES (Optional) ===
ENTERPRISE_MODE=false
CUSTOM_BRANDING_ENABLED=false
ADVANCED_ANALYTICS_ENABLED=false
DEDICATED_SUPPORT_ENABLED=false

# === CRISIS RESOURCES ===
CRISIS_HOTLINE_US=988
CRISIS_TEXT_LINE=741741
CRISIS_RESOURCES_URL=https://findahelpline.com
CRISIS_ESCALATION_WEBHOOK=https://your-crisis-team.endpoint

# === DEVELOPMENT ===
HOT_RELOAD=true
TEST_MODE=false
MOCK_EXTERNAL_APIS=false